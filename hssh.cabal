name:                hssh
version:             0.1.0.0
synopsis:            Simple shell scripting from Haskell
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Luke Clifton
maintainer:          lukec@themk.net
-- copyright:           
category:            System
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     Hssh
                     , Hssh.Example
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.9 && <4.12
                     , async
                     , deepseq
                     , free
                     , kan-extensions
                     , directory
                     , filepath
                     , mtl
                     , process
                     , split
                     , template-haskell
                     , unix
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite hssh-tests
  ghc-options: -threaded -with-rtsopts=-N
  default-language: Haskell2010
  build-depends:
    base >=4.9,
    tasty,
    tasty-quickcheck,
    tasty-hunit,
    hssh
  hs-source-dirs: test
  main-is: Test.hs
  type: exitcode-stdio-1.0
